
@using Senai.Financas.Mvc.Web.Models;
@{
    Layout = "MasterPageDeslogado";
}
<h3>Listagem de Usuários</h3>

@TempData["Mensagem"]

<table>
    <thead>
        <tr>
            <td>Nome</td>
            <td>E-mail</td>
            <td>Data de nascimento</td>
        </tr>
    </thead>
    <tbody>
        @foreach(UsuarioModel usuario in ViewData["Usuarios"] as List<UsuarioModel>)
        {
            <tr>
                <td>
                    @usuario.Nome
                </td>
                <td>
                    @usuario.Email
                </td>
                <td>
                    @usuario.DataNascimento.ToShortDateString()
                </td>
                <td>
                    <a href="/Usuario/Excluir?id=@usuario.ID">Excluir</a>
                    <a href="/Usuario/Editar?id=@usuario.ID">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* @UsuarioModel razor - Isso é um comentário. *@

<select>
    @foreach (UsuarioModel usuario in ViewData["Usuarios"] as List<UsuarioModel>)
    {
        <option>
            @usuario.Nome
        </option>
    }
</select>
